@model Filme

<div class="row">
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
            <label class="control-label" asp-for="Nome"></label>
            <input class="form-control" asp-for="Nome" />
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Sinopse"></label>
            <input class="form-control" asp-for="Sinopse" />
            <span class="text-danger" asp-validation-for="Sinopse"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Preco"></label>
            <input class="form-control" asp-for="Preco" />
            <span class="text-danger" asp-validation-for="Preco"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Lancamento"></label>
            <input class="form-control" asp-for="Lancamento" />
            <span class="text-danger" asp-validation-for="Lancamento"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="Duracao"></label>
            <input class="form-control" asp-for="Duracao" />
            <span class="text-danger" asp-validation-for="Duracao"></span>
        </div>

        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Criar!" />
            <a class="btn btn-secondary" asp-controller="Filmes" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>
